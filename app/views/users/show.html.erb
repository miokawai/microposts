<div class="row">
  <%= render 'aside' %>
  <div class="col-md-8">
  <%= render 'follow_form' if logged_in? %>
  <% if @user.microposts.any? %>
  
  <h3>Micropost(<%= @user.microposts.count %>)</h3>
  
  <ol class="microposts">
  
  <%= render @microposts %>
  </ol>
  <% end %>
  </div>
  </div>
<center><%= paginate(@microposts) %></center>
<div class="container">
  <h3> Profile </h3>
  <div class="table-responsive">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th>Number</th>
          <td><%=@user.id%></td>
        </tr>
        <tr>
          <th>Name</th>
          <td><%=@user.name%></td>
        </tr>
         <tr>
          <th>Email</th>
          <td><%=@user.email%></td>
        </tr>
        <tr>
          <th>Age</th>
          <td><%=@user.age%></td>
        </tr>
        <tr>
          <th>Comment</th>
          <td><%=@user.comment%></td>
        </tr>
        <tr>
          <th>Website</th>
          <td><a href ="<%=@user.website%>"><%=@user.website%></a></td>
        </tr>
    </tbody>
  </table>
    <center>
      <% if current_user == @user %>
  <p><%= link_to "プロフィールの編集画面へ", edit_user_path(current_user.id), class:"btn btn-default btn-md" %></p>
   <% end %>
   </center>
   </div>
   